    "version": "0.2.0",
    "configurations": 
    [
        {
            "name": "(gdb) Launch Server",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build Server",

            "program": "${workspaceFolder}/Executable/Server_Base",
            "args": [],

            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            
            "setupCommands": 
            [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
